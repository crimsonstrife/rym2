{
    "name": "crimsonstrife/rym2",
    "type": "project",
    "license": "MIT",
    "homepage": "https://github.com/crimsonstrife/rym2",
    "description": "C868 Capstone Project",
    "keywords": [
        "capstone",
        "college recruitment",
        "web application"
    ],
    "authors": [
        {
            "name": "Patrick Barnhardt",
            "email": "pbarnh1@wgu.edu"
        }
    ],
    "require": {
        "php": ">=7.2.5",
        "vlucas/phpdotenv": "^5.5",
        "twbs/bootstrap": "^5.3.2",
        "fortawesome/font-awesome": "^6.4",
        "components/jquery": "^3.7",
        "select2/select2": "^4.0",
        "components/jquery-migrate": "^3.0",
        "phpmailer/phpmailer": "^6.8",
        "chillerlan/php-qrcode": "^5.0",
        "survos/simple-datatables-bundle": "^1.5",
        "nnnick/chartjs": "^4.4"
    },
    "autoload": {
        "psr-4": {
            "CrimsonStrife\\RYM2\\Classes\\": "includes/classes/",
            "CrimsonStrife\\RYM2\\Interfaces\\": "includes/interfaces/"
        },
        "classmap": [
            "includes/classes/users.inc.php",
            "includes/classes/auth.inc.php",
            "includes/classes/roles.inc.php",
            "includes/classes/permissions.inc.php",
            "includes/classes/students.inc.php",
            "includes/classes/subjects.inc.php",
            "includes/classes/areaofinterest.inc.php",
            "includes/classes/jobfield.inc.php",
            "includes/classes/job.inc.php",
            "includes/classes/grade.inc.php",
            "includes/classes/degree.inc.php",
            "includes/classes/school.inc.php",
            "includes/classes/reports.inc.php",
            "includes/classes/events.inc.php",
            "includes/interfaces/login.inc.php",
            "includes/interfaces/major.inc.php",
            "includes/classes/topdegreebyschool.report.inc.php",
            "includes/classes/students.report.inc.php"
        ]
    },
    "scripts": {
        "post-update-cmd": [
            "npm install",
            "rm -rf public/content/libs/bootstrap",
            "mkdir -p public/content/libs/bootstrap/css",
            "mkdir -p public/content/libs/bootstrap/js",
            "cp -R vendor/twbs/bootstrap/dist/css/bootstrap.min.css public/content/libs/bootstrap/css/",
            "cp -R vendor/twbs/bootstrap/dist/js/bootstrap.bundle.min.js public/content/libs/bootstrap/js/",
            "cp -R vendor/twbs/bootstrap/dist/js/bootstrap.bundle.min.js.map public/content/libs/bootstrap/js/",
            "cp -R vendor/twbs/bootstrap/dist/js/bootstrap.min.js public/content/libs/bootstrap/js/",
            "cp -R vendor/twbs/bootstrap/dist/js/bootstrap.min.js.map public/content/libs/bootstrap/js/",
            "rm -rf public/content/libs/fontawesome",
            "mkdir -p public/content/libs/fontawesome/css",
            "mkdir -p public/content/libs/fontawesome/js",
            "cp -R vendor/fortawesome/font-awesome/css/all.min.css public/content/libs/fontawesome/css/",
            "cp -R vendor/fortawesome/font-awesome/js/all.min.js public/content/libs/fontawesome/js/",
            "cp -R vendor/fortawesome/font-awesome/webfonts public/content/libs/fontawesome/",
            "rm -rf public/content/libs/jquery",
            "mkdir -p public/content/libs/jquery",
            "cp -R vendor/components/jquery/jquery.min.js public/content/libs/jquery/",
            "cp -R vendor/components/jquery/jquery.min.map public/content/libs/jquery/",
            "rm -rf public/content/libs/jquery-migrate",
            "mkdir -p public/content/libs/jquery-migrate",
            "cp -R vendor/components/jquery-migrate/jquery-migrate.min.js public/content/libs/jquery-migrate/",
            "rm -rf public/content/libs/select2",
            "mkdir -p public/content/libs/select2/css",
            "mkdir -p public/content/libs/select2/js",
            "cp -R vendor/select2/select2/dist/css/select2.min.css public/content/libs/select2/css/",
            "cp -R vendor/select2/select2/dist/js/select2.min.js public/content/libs/select2/js/",
            "cp -R vendor/select2/select2/dist/js/select2.full.min.js public/content/libs/select2/js/",
            "rm -rf public/content/libs/simple-datatables",
            "mkdir -p public/content/libs/simple-datatables",
            "mkdir -p public/content/libs/simple-datatables/umd",
            "cp -R node_modules/simple-datatables/dist/style.css public/content/libs/simple-datatables",
            "cp -R node_modules/simple-datatables/dist/umd/simple-datatables.js public/content/libs/simple-datatables/umd/",
            "rm -rf public/content/libs/chart.js",
            "mkdir -p public/content/libs/chart.js",
            "cp -R node_modules/chart.js/dist/chart.umd.js public/content/libs/chart.js/",
            "cp -R node_modules/chart.js/dist/chart.umd.js.map public/content/libs/chart.js/",
            "rm -rf public/content/libs/popper.js",
            "mkdir -p public/content/libs/popper.js",
            "cp -R node_modules/@popperjs/core/dist/umd/popper.min.js public/content/libs/popper.js/",
            "cp -R node_modules/@popperjs/core/dist/umd/popper.min.js.map public/content/libs/popper.js/",
            "rm -rf public/content/libs/leaflet",
            "mkdir -p public/content/libs/leaflet",
            "cp -R node_modules/leaflet/dist/leaflet.css public/content/libs/leaflet/",
            "cp -R node_modules/leaflet/dist/leaflet.js public/content/libs/leaflet/",
            "cp -R node_modules/leaflet/dist/leaflet.js.map public/content/libs/leaflet/",
            "cp -R node_modules/leaflet/dist/images public/content/libs/leaflet/",
            "rm -rf public/content/libs/leaflet-geosearch",
            "mkdir -p public/content/libs/leaflet-geosearch",
            "mkdir -p public/content/libs/leaflet-geosearch/providers",
            "cp -R node_modules/leaflet-geosearch/dist/geosearch.css public/content/libs/leaflet-geosearch/",
            "cp -R node_modules/leaflet-geosearch/dist/geosearch.umd.js public/content/libs/leaflet-geosearch/",
            "cp -R node_modules/leaflet-geosearch/dist/geosearch.umd.js.map public/content/libs/leaflet-geosearch/",
            "cp -R node_modules/leaflet-geosearch/dist/providers/openStreetMapProvider.d.ts public/content/libs/leaflet-geosearch/providers"
        ]
    }
}
